<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fasulye">

    <!-- Başlık -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taze Fasulye Yemeği Tarifi İçin Malzemeler"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:importantForAccessibility="yes"
        android:contentDescription="Taze Fasulye Yemeği Tarifi İçin Malzemeler başlığı" />

    <!-- Malzeme Listesi -->
    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• 600 gr taze yeşil fasulye\n• 2 adet domates\n• 1 adet soğan\n• Yarım çay kaşığı pul biber\n• Yarım çay kaşığı karabiber\n• 2 çay kaşığı tuz\n• Yarım çay bardağı zeytinyağı (veya sıvı yağ)\n• 1,5 yemek kaşığı domates salçası\n• 2 su bardağı sıcak su"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:importantForAccessibility="yes"
        android:contentDescription="Taze Fasulye için malzeme listesi" />

    <!-- Yapılış Başlığı -->
    <TextView
        android:id="@+id/how_to_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taze Fasulye Nasıl Yapılır?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/ingredients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:importantForAccessibility="yes"
        android:contentDescription="Taze Fasulye Nasıl Yapılır başlığı" />

    <!-- Yapılış Adımları -->
    <TextView
        android:id="@+id/steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:contentDescription="Taze Fasulye yemeğinin yapılış adımları"
        android:importantForAccessibility="yes"
        android:text="1. Fasulyeleri yıkayıp uçlarını temizleyin.\n2. Soğanı yemeklik doğrayıp zeytinyağında kavurun.\n3. Doğranmış domatesleri ekleyip karıştırın.\n4. Domates salçasını ekleyip, üzerine baharatları koyun.\n5. Fasulyeleri ekleyip 2 su bardağı sıcak suyu ilave edin.\n6. Karıştırıp pişmeye bırakın.\n7. Piştikten sonra sıcak olarak servis yapın. Afiyet olsun!"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/how_to_title"
        app:layout_constraintVertical_bias="0.123" />

</androidx.constraintlayout.widget.ConstraintLayout>


